# Use OpenAI (ChatGPT) with Aider
aider-openai() {
  # Ensure Ollama isnâ€™t hijacking provider selection
  unset OLLAMA_API_BASE
  aider --config "$HOME/.aider/openai.yml" "$@"
}

# Use Ollama with Aider
aider-ollama() {
  # Point Aider/LiteLLM at your local Ollama server (set once here)
  export OLLAMA_API_BASE="${OLLAMA_API_BASE:-http://127.0.0.1:11434}"
  aider --config "$HOME/.aider/ollama.yml" "$@"
}
