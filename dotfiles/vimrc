" Basic sensible defaults
set nocompatible
syntax on
filetype plugin indent on
set number
set hidden
set nowrap
set ignorecase smartcase
set ruler
set mouse=a
set backspace=indent,eol,start

" Dark for terminal Vim; Light for GVim
if has('gui_running')
  set background=light
  colorscheme peachpuff        " built-in light scheme (no plugin required)
else
  set background=dark
  if exists('g:colors_name') && g:colors_name ==# 'badwolf'
    " already active
  elseif exists('*pathogen#infect')
    " if your bootstrap installed badwolf via pathogen
    try
      colorscheme badwolf
    catch
      colorscheme evening      " fallback built-in dark
    endtry
  else
    try
      colorscheme badwolf
    catch
      colorscheme evening
    endtry
  endif
endif
